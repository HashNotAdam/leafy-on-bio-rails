<div class="<%= component_css_class %> flex justify-center mt-12" <%= stimulus(:controller) %>>
  <%= form_with(
    url: plant_searches_path,
    class: "flex items-center",
    html: { **stimulus_hash(target: "form") }
  ) do |form| %>
    <%= form.text_field(
      :q,
      placeholder: "Search plants",
      class: "border border-gray-300 rounded-md rounded-r-none p-2",
      **stimulus_hash(target: "input", action: "input->search")
    ) %>

    <%= form.submit(
      "Search",
      class: %w[
        p-2 text-stone-800 disabled:text-stone-400
        border border-gray-300 border-l-0 rounded-md rounded-l-none
      ],
      disabled: true,
      **stimulus_hash(target: "submit")
    ) %>
  <% end %>
</div>
